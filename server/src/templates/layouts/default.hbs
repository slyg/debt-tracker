<!doctype html>
<html>
	<head>
		<title>{{title}}</title>
		<link rel="stylesheet" type="text/css" href="vendors/tetra-ui/dist/css/tetra-ui.css" />
		<style type="text/css">

			body {background: #e8e9eb;}

			svg { shape-rendering: crispEdges; }
			circle {shape-rendering: auto; fill : #999;}
			circle:hover {cursor: pointer;}
			text { font-family: Arial; fill: #000; font-size: 8pt; }

			.line { stroke : #eee; }

			.flex-container {
			    display: flex;
			    flex-wrap: wrap;
			    align-content: center;
			}

			.flex-item {padding-right: 20px;}
			.flex-item:last-child {padding-right: 0;}

			.flex-ratio-1 {flex: 1;}
			.flex-ratio-2 {flex: 2;}
			.flex-ratio-3 {flex: 3;}
			.flex-ratio-4 {flex: 4;}
			.flex-ratio-5 {flex: 5;}

			.page-header {border-bottom-color: #fff;}


		</style>
	</head>
	<body class="pal">

		{{> body }}
		<script src="javascript/main.js"></script>
	</body>
</html>